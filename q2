#include <iostream>
using namespace std;

float calc_diameter(float r){
	return r*2;
}
float calc_cicumference(float r){
	return 2*(3.14)*r;
}
float calc_area(float r){
	return (3.14)*r*r;
}

int main() {
	float r1;
          cout<<"Enter a number ";
	cin>>r1;
          cout<<"\nThe diameter of circle is "<<calc_diameter(r1);
          cout<<"\nThe cicumference of circle is "<<calc_cicumference(r1);  	
          cout<<"\nThe area of circle is "<<calc_area(r1);  	
	return 0;
}
