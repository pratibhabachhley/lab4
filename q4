#include <iostream>
using namespace std;


int odd_even(int a)
{  int c=1;
	if(a%2==0)
            c=0;
   return c;
}


int main() {
    int a1,c1;
    cout<<"Enter any number";
    cin>>a1;
    c1=odd_even(a1);
    if(c1==0)
     cout<<"\nThe number is even.";
     else 
     cout<<"\nThe number is odd ";
	return 0;
}
